<div class="w-full py-6 px-3">
    <div class="border bg-white shadow-lg rounded-lg overflow-hidden">
        <a href="{{ product_product.url }}">
            {% if product_product.featured_image %}
                <div class="h-full overflow-hidden">
                    <img src="{{ product_product.featured_image | img_url: "master" }}" alt="{{ product_product.featured_image.alt }}" class="w-full h-full object-cover transition duration-1000 ease-in-out hover:scale-105 trasnform">
                </div>
                {% else %}
                {{ 'product_product-1'| placeholder_svg_tag: 'w-full h-full object-cover bg-gray-100' }}
              {% endif %}
        </a>
        <div class="flex flex-col p-3">
            <span class="text-sm block text-gray-400 capitalize">{{ product_product.vendor }}</span>
            <a href="{{ product_product.url }}" class="text-gray-700 uppercase font-medium">{{ product_product.title }}</a>
            <p class="text-gray-500">{{ product_product.price | money }}</p>
        </div>
    </div>

</div>