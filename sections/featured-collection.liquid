<div class="flex flex-col items-center my-8">
<h1 class="text-center text-4xl">{{ section.settings.title }}</h1>
<div class="max-w-7xl mx-auto">
    <div class="grid grid-cols-1 gap-4 md:grid-cols-4">
        {% for product in section.settings.featured_collection.products limit: section.settings.number_of_product %}
            {% render 'product-card' product_product: product %}
        {% else %}
            {% for item in (1..3) %}
              {% render 'product-card-placeholder' %}
            {% endfor %}
          {% endfor %}
    </div>
</div>
</div>



{% schema %}
{
    "name": "Featured Collection",
    "settings": [
        {
            "type": "text",
            "id": "title",
            "label": "Title",
            "default": "Featured Collection"
        },
        {
            "type": "collection",
            "id": "featured_collection",
            "label": "Select Collection"
        },
        {
            "type": "range",
            "id": "number_of_product",
            "label": "Number of Products to Show",
            "min": 3,
            "max": 12,
            "default": 3
        }
    ],
    "presets": [
        {
            "name": "Featured Collection"
        }
    ]
}
{% endschema %}