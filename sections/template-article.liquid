<h1>{{ article.title }}</h1>
{% if section.settings.enable-author %}
    <small>{{ article.author }}</small>  
{% endif %}

{% if section.settings.enable-date %}
    <time datetime="{{ article.published_at | date: '%Y-%m-%d' }}">{{ article.published_at | date: '%Y-%m-%d' }}</time>
{% endif %}

<img src="{{ article.image | img_url: "master" }}" loading="lazy" alt="{{ article.image.alt }}" width="100%" height="100%">
<p>{{ article.content }}</p>


{% schema %}
{
    "name": "Template Article",
    "settings": [
        {
            "type": "checkbox",
            "id": "enable-author",
            "label": "Enable Author",
            "default": true
        },
        {
            "type": "checkbox",
            "id": "enable-date",
            "label": "Enable Date",
            "default": true
        }
    ],
    "blocks": [
        {
            "type": "article_title",
            "name": "Title",
            "limit": 1
        },
        {
            "type": "article_author",
            "name": "Author",
            "limit": 1
        },
        {
            "type": "article_published_date",
            "name": "Published Date",
            "limit": 1
        },
        {
            "type": "featured_image",
            "name": "Thumbnail",
            "limit": 1
        },
        {
            "type": "article_content",
            "name": "Content",
            "limit": 1
        }
    ],
    "presets": [
        {
            "name": "Template Article"
        }
    ]
}
{% endschema %}