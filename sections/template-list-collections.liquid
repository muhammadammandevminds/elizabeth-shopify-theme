<div class="flex flex-col items-center my-8">
<h1 class="text-4xl font-medium">{{ section.settings.title }}</h1>
<div class="max-w-7xl mx-auto my-3">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-3">
        {% for collection in collections %}
            {% if collection.all_products_count > 0 %}
              <div class="w-full py-6 px-3">
                <div class="border bg-white overflow-hidden">
                    <a href="{{ collection.url }}">
                        <div class="h-full overflow-hidden">
                            {% if collection.featured_image != blank %}
                              {% assign collection_image = collection.featured_image %}
                            {% else %}
                                {% assign collection_image = collection.products.first.images %}
                            {% endif %}
                            <img src="{{ collection_image | img_url: "master" }}" alt="{{ collection.title | escape }}"> 
                        </div>
                        <div class="p-5 bg-gray-100">
                            <h1 class="text-xl">{{ collection.title }}</h1>
                        </div>
                    </a>
                </div>
              </div>
            {% endif %}
        {% endfor %}
    </div>
</div>
</div>


{% schema %}
{
    "name": "Template List Collection",
    "settings": [
        {
            "type": "text",
            "id": "title",
            "label": "Enter Title",
            "default": "Collections"
        }
    ],
    "presets": [
        {
            "name": "Template List Collection"
        }
    ]
}
{% endschema %}