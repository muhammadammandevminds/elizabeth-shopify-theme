{% if cart.item_count > 0 %}
    <div class="py-4">
        <div class="max-w-7xl flex flex-col my-8 mx-auto">
            <div class="flex justify-between items-end my-5 w-full">
                <h1 class="text-4xl">Your Cart</h1>
                <a href="{{ routes.all_products_collection_url }}" class="text-blue-600 hover:text-blue:800 font-medium underline">Continue Shopping</a>
            </div>
        </div>
        <div class="max-w-7xl flex flex-col my-8 mx-auto">
            <form action="{{ routes.cart_url }}" method="POST" novalidate>
                <table class="table-auto divide-y divide-gray-200 my-4 w-full">
                    <thead>
                        <th class="px-5 py-3 text-left text-sm font-medium text-gray-500">Product</th>
                        <th class="px-5 py-3 text-left text-sm font-medium text-gray-500">Qunatity</th>
                        <th class="px-5 py-3 text-left text-sm font-medium text-gray-500">Total Price</th>
                    </thead>
                    <tbody>
                        {% for item in cart.items %}
                          <tr class="table-row">
                            <td class="py-4 px-2 flex flex-col justify-center">
                                <a href="{{ item.url }}">
                                    {% if item.image %}
                                      <img src="{{ item.image | img_url: "medium" }}" alt="{{ item.title | escape }}" class="w-20 h-20 object-cover border">
                                    {% else %}
                                        {{ 'product-1' | placeholder_svg_tag: 'w-20 h-20 object-cover border' }}
                                    {% endif %}
                                </a>
                            </td>
                            <td class="py-4 px-2 flex flex-col justify-center"> 
                                <a href="{{ item.url }}" class="my-1">{{ item.product.title }}</a>
                                <span class="text-gray-500 my-1 text-sm">{{ item.variant.title }}</span>
                                <a href="{{ routes.cart_change_url }}?line={{ forloop.index }}&quantity=0" class="text-sm font-medium text-red-500 my-1">remove</a>
                            </td>
                            <td class="py-4 px-2">
                                <input type="number" name="updates[]" id="updates_{{ forloop.index }}" value="{{ item.quantity }}" min="1" class="w-20 border p-2">
                            </td>
                            <td class="py-4 px-2">
                                {{ item.line_price | money }}
                            </td>
                          </tr>
                        {% endfor %}
                    </tbody>
                </table>
                <div class="flex flex-column justify-between items-center md:flex-row">
                   <div class="w-full my-4 md:w-80">
                    <div class="flex flex-col items-start">
                        <label for="cart_notes" class="my-1">Cart Notes</label>
                        <textarea class="w-full md:max-w-lg resize-none border h-20" id="cart_notes" name="note"></textarea>
                    </div>
                    </div> 
                   <div class="w-full my-4 md:w-80">
                    {% for block in section.blocks %}
                        {% case block.type %}
                          {% when 'subtotal' %}
                            <h3 class="text-xl">Subtotal: {{ cart.total_price | money }}</h3>
                          {% when 'update_button' %}
                            <div class="my-2">
                                <button type="submit" name="update" class="w-full p-3 border border-gray-600 text-gray-600 font-medium hover:bg-gray-900 hover:text-white cursor-pointer">Update</button>
                            </div>
                            {% when 'checkout_button' %}
                            <div class="my-2">
                                <button type="submit" name="checkout" class="w-full p-3 border border-gray-600 font-medium bg-gray-900 text-white cursor-pointer">Checkout</button>
                            </div>
                          {% else %}
                            
                        {% endcase %}
                      
                    {% endfor %}
                    
                   
                    
                   </div>
                </div>
            </form>
        </div>
    </div>
{% else %}
  <div class="max-w-6xl flex items-center justify-center h-60 my-4">
    <div class="text-center">
        <h1 class="text-4xl my-4">Your cart is empty</h1>
        <div class="my-4 py-4">
            <a href="{{ routes.all_products_collection_url }}" class="border border-gray-600 text-white bg-gray-900 p-5">Continue Shipping</a>
        </div>
    </div>
  </div>
{% endif %}


{% schema %}
{
    "name": "Template Cart",
    "settings": [],
    "blocks": [
        {
            "type": "subtotal",
            "name": "Subtotal",
            "limit": 1
        },
        {
            "type": "update_button",
            "name": "Update Button",
            "limit": 1
        },
        {
            "type": "checkout_button",
            "name": "Checkout Button",
            "limit": 1
        }
    ],
    "presets": [
        {
            "name": "Template Cart"
        }
    ]
}
{% endschema %}