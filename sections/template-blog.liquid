<div class="py-8">
    {% paginate blog.articles by section.settings.number-of-blog %}
        <h1 class="text-center text-3xl">{{ blog.title }}</h1>
        <div class="max-w-7xl mx-auto">
            <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-6">
                {% for article in blog.articles %}
                    <div class="w-full py-6 px-3">
                        <div class="bg-black shadow-xl rounded-lg overflow-hidden">
                            {% if article.image %}
                                <img class="w-full object-cover h-80" src="{{ article.image | img_url: "master" }}" alt="{{ article.image }}">
                              {% else %}
                                  {{ 'image' | placeholder_svg_tag: 'w-full object-cover h-80 bg-gray-100' }}
                              {% endif %}
                            <div class="p-4">
                                <h1 class="text-xl font-medium my-4">{{ article.title }}</h1>
                      
                                {% if article.excerpt.size > 0 %}
                                  <p>{{ article.excerpt | strip_html | truncatewords: 15 }}</p>
                                {% else %}
                                  <p>{{ article.content | strip_html | truncatewords: 15 }}</p>
                                {% endif %}
                                <a href="{{ article.url }}" class="font-medium text-blue hover:text-blue-800 my-4 block">{{ section.settings.read-more-text }}</a>
                            </div>
                        </div>
                    </div>
                  {% endfor %}
            </div>
        </div>
        {% render 'pagination', pagination: paginate %}
      {% endpaginate %}
</div>



{% schema %}
{
    "name": "Blogs",
    "settings": [
        {
            "type": "text",
            "id": "read-more-text",
            "label": "Read More Text",
            "default": "Read More"
        },
        {
            "type": "range",
            "id": "number-of-blog",
            "step": 1,
            "min": 1,
            "max": 5,
            "default": 1,
            "label": "Total Number of Blogs"
        }
    ],
    "presets": [
        {
            "name": "Blogs"
        }
    ]
}
{% endschema %}

